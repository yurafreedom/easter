						a.step-two__eggs-link(href="#")
							img(src="static/img/egg-1.svg", alt="")
						a.step-two__eggs-link(href="#")
							img(src="static/img/egg-2.svg", alt="")
						a.step-two__eggs-link(href="#")
							img(src="static/img/egg-1.svg", alt="")
						a.step-two__eggs-link(href="#")
							img(src="static/img/egg-2.svg", alt="")
					.step-one__next-block.step-two__next-block
						a.btn--next(href="step_three.html") Далее
							img(src="static/img/arrow-right.png", alt="")
			footer.main-footer
				.wrapper
					.main-footer__container
						a.btn--map(href="contacts.html") Карта стендов
							img(src="static/img/icon-map.png", alt="")
						a.btn--info(href="about.html") О нас
							img(src="static/img/icon-info.png", alt="")
